<%- include('partials/header') -%>


<main class="p-4">
  
    <h1>Create a new blog post</h1>
    <div>
        <form action="/create-post" method="post" class="my-4">
            <div>
                <div class="mb-1">
                    <label for="title">
                        blog title 
                    </label>
                </div>
                <input type="text" autocomplete="off" name="title" id="title" class="bg-transparent outline-none border border-dark rounded-2" required/>
            </div>
            <div class="mt-3">
                <div class="mb-1"><label for="post">Your post</label></div>
                <textarea name="post" id="post" class="outline-none border border-dark bg-transparent w-25 rounded-2" required></textarea>
            </div>
            <button class="rounded-pill hovering">publish</button>
        </form>
    </div>
</main>




<%- include('partials/footer') -%>