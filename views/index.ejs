<%- include('partials/header') -%>


<main >
    <h2>Our articles</h2>
    <div class="d-flex flex-wrap">
   
    <% home.forEach(article => {%>
        
        <div class=" custom-w m-4 bg-custom-card-b border border-4 border-white rounded-2 p-3">
            <h3 class="text-custom-s"><%= article.title %></h3>
            <p class="text-custom-s"><%= article.content.length > 100 ? article.content.substring(0,100) + '...': article.content %></p>
            <a href=<%= "/posts/" + article.title.toLowerCase().split(" ").join('-') %> class="text-decoration-none py-2 px-3 text-light bg-custom-s rounded-2 ">Read more</a>
        </div>
    <% }) %>


 

    </div>
        
</main>


<%- include('partials/footer') -%>